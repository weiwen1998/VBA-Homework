Sub stock()

For Each ws In Worksheets

Dim Ticker As String
Dim Change As Double
Dim PercentChange As Double
Dim Stock_Vol As LongLong
Stock_Vol = 0
Change = 0
PercentChange = 0

Dim Summary_Table_Row As Integer
Summary_Table_Row = 2

Dim OpenP As Double
Dim CloseP As Double
Dim Start As Double


OpenP = 0
CloseP = 0

lastrow = ws.Cells(Rows.Count, "A").End(xlUp).Row


For i = 2 To lastrow

If ws.Cells(i + 1, 1).Value <> ws.Cells(i, 1).Value Then

Ticker = ws.Cells(i, 1).Value

Stock_Vol = Stock_Vol + ws.Cells(i, 7).Value

Start = 2
OpenP = ws.Cells(Start, 3)

If ws.Cells(Start, 3) = 0 Then
    For OpenP = 2 To i
        If ws.Cells(OpenP, 3).Value <> 0 Then
        Start = OpenP
    Exit For
    End If
    Next OpenP
End If

Change = ws.Cells(i, 6) - ws.Cells(Start, 3)
PercentChange = Change / OpenP * 100

ws.Range("I" & Summary_Table_Row).Value = Ticker
ws.Range("J" & Summary_Table_Row).Value = Change
ws.Range("K" & Summary_Table_Row).Value = PercentChange
ws.Range("L" & Summary_Table_Row).Value = Stock_Vol

Summary_Table_Row = Summary_Table_Row + 1

Stock_Vol = 0


Else
Stock_Vol = Stock_Vol + ws.Cells(i, 7).Value

End If

If ws.Range("J" & Summary_Table_Row) >= 0 Then
ws.Range("J" & Summary_Table_Row).Interior.ColorIndex = 4

Else
ws.Range("J" & Summary_Table_Row).Interior.ColorIndex = 3

End If

Next i

Next ws

End Sub
